# ============================================================
# Talk2SQL Backend — Environment Variables
# Copy this file to .env and fill in your credentials.
# ============================================================

# ── FastAPI ─────────────────────────────────────────────────
DEBUG=True
CORS_ORIGINS=http://localhost:3000

# ── Supabase / PostgreSQL ───────────────────────────────────
SUPABASE_DB_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ── LongCat LLM (OpenAI-compatible) ────────────────────────
LONGCAT_API_BASE=https://api.longcat.ai/v1
LONGCAT_API_KEY=your-longcat-api-key
LONGCAT_MODEL=longcat-v1
LONGCAT_TEMPERATURE=0.0
LONGCAT_MAX_TOKENS=1024

# ── Embeddings ──────────────────────────────────────────────
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ── JWT Authentication ──────────────────────────────────────
JWT_SECRET=change-this-to-a-random-64-char-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# ── Session ─────────────────────────────────────────────────
SESSION_MAX_TURNS=20
